<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorWhite"
    tools:context=".MainActivity">


    <ScrollView
        android:id="@+id/swleft"
        android:layout_width="200dp"
        android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rleft"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ImageView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/imageView"
        android:layout_gravity="left|top"
        android:layout_alignParentTop="true"
        android:onClick="imageClicked"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:textColor="@color/colorPrimaryDark"
        android:gravity="center"
        android:id="@+id/textView1"
        android:layout_below="@+id/imageView"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:id="@+id/imageView2"
        android:layout_below="@id/textView1"
        android:onClick="imageClicked"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:gravity="center"
        android:textColor="@color/colorPrimaryDark"
        android:id="@+id/textView2"
        android:layout_below="@id/imageView2" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:id="@+id/imageView3"
        android:layout_below="@id/textView2"
        android:onClick="imageClicked"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:gravity="center"
        android:textColor="@color/colorPrimaryDark"
        android:id="@+id/textView3"
        android:layout_below="@id/imageView3" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:id="@+id/imageView4"
        android:layout_below="@id/textView3"
        android:onClick="imageClicked"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:gravity="center"
        android:textColor="@color/colorPrimaryDark"
        android:id="@+id/textView4"
        android:layout_below="@id/imageView4" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:id="@+id/imageView5"
        android:layout_below="@+id/textView4"
        android:onClick="imageClicked"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:gravity="center"
        android:textColor="@color/colorPrimaryDark"
        android:id="@+id/textView5"
        android:layout_below="@id/imageView5" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:id="@+id/imageView7"
        android:layout_below="@+id/textView5"
        android:onClick="imageClicked"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:gravity="center"
        android:textColor="@color/colorPrimaryDark"
        android:id="@+id/textView6"
        android:layout_below="@+id/imageView7" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:id="@+id/imageView8"
        android:layout_below="@+id/textView6"
        android:onClick="imageClicked"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:gravity="center"
        android:textColor="@color/colorPrimaryDark"
        android:id="@+id/textView7"
        android:layout_below="@+id/imageView8" />
    </RelativeLayout>
    </ScrollView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/frameLayout"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/swleft"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:background="@color/colorWhite">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:id="@+id/imageView6"/>
    </FrameLayout>

    <at.markushi.ui.CircleButton
        android:layout_width="96dip"
        android:layout_height="96dip"
        android:id="@+id/send"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:onClick="send"
        android:visibility="invisible"
        android:src="@mipmap/ic_done_white_24dp"
        app:cb_color="@color/colorGreenButton"/>

    <at.markushi.ui.CircleButton
        android:layout_width="96dip"
        android:layout_height="96dip"
        android:id="@+id/draw"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:onClick="draw"
        android:src="@mipmap/ic_brush_white_24dp"
        app:cb_color="@color/colorBlueButton"/>

    <at.markushi.ui.CircleButton
        android:layout_width="64dip"
        android:layout_height="64dip"
        android:id="@+id/undo"
        android:layout_below = "@+id/draw"
        android:layout_alignParentRight="true"
        android:clickable="true"
        android:onClick="undo"
        android:src="@mipmap/ic_undo_white_24dp"
        app:cb_color="#FFBB33"/>

    <at.markushi.ui.CircleButton
        android:layout_width="64dip"
        android:layout_height="64dip"
        android:id="@+id/eraseStrk"
        android:layout_below = "@+id/undo"
        android:layout_alignParentRight="true"
        android:clickable="true"
        android:onClick="eraseStrk"
        android:src="@mipmap/ic_backspace_white_24dp"
        app:cb_color="#ff33e0"/>

    <at.markushi.ui.CircleButton
        android:layout_width="64dip"
        android:layout_height="64dip"
        android:id="@+id/erase"
        android:layout_below = "@+id/eraseStrk"
        android:layout_alignParentRight="true"
        android:clickable="true"
        android:onClick="erase"
        android:src="@mipmap/ic_clear_white_24dp"
        app:cb_color="#B71C1C"/>

    <at.markushi.ui.CircleButton
        android:layout_width="64dip"
        android:layout_height="64dip"
        android:id="@+id/ip"
        android:layout_below = "@+id/erase"
        android:layout_alignParentRight="true"
        android:onClick="setip"
        android:src="@mipmap/ic_settings_ethernet_white_24dp"
        app:cb_color="#000000"/>

</RelativeLayout>